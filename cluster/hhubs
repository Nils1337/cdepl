{
	util_log_debug "[hhubs] before_cleanup"
}

_cdepl_cluster_after_cleanup()
{
	util_log_debug "[hhubs] after_cleanup"
}

##################################
# private to this script

__cdepl_cluster_hhubs_remote_node_cmd()
{
	local node=$1
	local cmd="$2"

	if [ "$HHUBS_SOLLIPULLI_MODE" = "1" ]; then
		# -n -f for nohup
		ssh ${HHUBS_SOLLIPULLI_USER}@sollipulli -n -f "ssh $node \"$cmd\"" 
	else
		# -n -f for nohup
		ssh ${HHUBS_SOLLIPULLI_USER}@134.99.112.82 -p 55517 -n -f "ssh $node \"$cmd\""
	fi
}

__cdepl_cluster_hhubs_remote_sollipulli_cmd()
{
	local cmd="$1"
	
	if [ "$HHUBS_SOLLIPULLI_MODE" = "1" ]; then
		# -n -f for nohup
		ssh ${HHUBS_SOLLIPULLI_USER}@sollipulli -n -f "$cmd"
	else
		# -n -f for nohup
		ssh ${HHUBS_SOLLIPULLI_USER}@134.99.112.82 -p 55517 -n -f "$cmd"
	fi
}

__cdepl_cluster_hhubs_sollipulli_check()
{
	ping -c 1 sollipulli > /dev/null 2>&1

	# Check if sollipulli is reachable on the current net
	if [ "$?" != "0" ]; then

		# Try directly via IP
		ping -c 1 134.99.112.82 > /dev/null 2>&1

		if [ "$?" != "0" ]; then
			util_log_error_and_exit "[hhubs] Could not contact sollipulli, not available"
		else
			HHUBS_SOLLIPULLI_MODE=2
		fi
	else
		HHUBS_SOLLIPULLI_MODE=1
	fi

	util_log_debug "[hhubs] sollipulli available, mode $HHUBS_SOLLIPULLI_MODE"
}

